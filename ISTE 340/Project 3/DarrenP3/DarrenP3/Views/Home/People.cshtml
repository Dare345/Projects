@model DarrenP3.Models.PeopleModel;
@{
    ViewData["Title"] = Model.pageTitle;
}

<h1>@Model.title</h1>
<div>@Model.subTitle</div>
<hr />
<div id="pepEverything" style="display:none">
    <hr />
    <div class="tabTest">
            <ul>
                <li><a href="#staf">Staff</a></li>
                <li><a href="#fac">Faculty</a></li>
            </ul>
            <div id="staf">
                @foreach (var staff in @Model.staff)
                {
                    <div class="person">
                        <img src="@staff.imagePath" alt="pic" />
                        <div id="@staff.username">
                            <h3 style="font-size:small">
                                @staff.name
                            </h3>
                            <h3 style="font-size:small">
                                @staff.title
                            </h3>
                            <h3 style="font-size:small">
                                @staff.office
                            </h3>
                            <h3 style="font-size:small">
                                @staff.phone
                            </h3>
                            <h3 style="font-size:small">
                                @staff.email
                            </h3>
                            @if (staff.website != "")
                            {
                                <h3 style="font-size:small">
                                    <a href="@staff.website" target="_blank">My Site</a>
                                </h3>
                            }
                        </div>
                    </div>
                }
            </div>
            <div id="fac">
                @foreach (var faculty in @Model.faculty)
                {
                    <div class="person">
                        <img src="@faculty.imagePath" alt="pic" />

                        <h3 style="font-size:small">
                            @faculty.name
                        </h3>
                        <h3 style="font-size:small">
                            @faculty.title
                        </h3>
                        <h3 style="font-size:small">
                            @faculty.office
                        </h3>
                        <h3 style="font-size:small">
                            @faculty.phone
                        </h3>
                        <h3 style="font-size:small">
                            @faculty.email
                        </h3>
                        @if (faculty.website != "")
                        {
                            <h3 style="font-size:small">
                                <a href="@faculty.website" target="_blank">My Site</a>
                            </h3>
                        }
                    </div>
                }
            </div>
    </div>
    <hr />
